      border-radius: 10px;
      display: inline-block;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }
    h1 {
      color: red;
    }
    .buttons {
      margin-top: 20px;
    }
    button {
      padding: 10px 20px;
      font-size: 16px;
      border: none;
      cursor: pointer;
      transition: 0.3s;
    }
    #yes {
      background-color: lightgreen;
    }
    #no {
      background-color: lightcoral;
    }
    #message {
      margin-top: 20px;
      font-size: 18px;
      color: darkred;
    }
  </style>
